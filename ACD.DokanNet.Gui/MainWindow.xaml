<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Azi.ACDDokanNet.Gui"
        xmlns:ACDDokanNet="clr-namespace:Azi.ACDDokanNet;assembly=amazon-clouddrive-dokan" xmlns:Gui="clr-namespace:ACD.DokanNet.Gui" x:Class="Azi.ACDDokanNet.Gui.MainWindow"
        mc:Ignorable="d"
        Title="MainWindow" Height="300" Width="300" ResizeMode="NoResize" Closed="Window_Closed">
    <Window.DataContext>
        <Gui:ViewModel/>
    </Window.DataContext>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="77*"/>
            <RowDefinition Height="195*"/>
        </Grid.RowDefinitions>
        <GroupBox x:Name="groupBox" Header="Mounting" Padding="5" >
            <Grid >
                <ComboBox x:Name="comboBox" HorizontalAlignment="Left" VerticalAlignment="Top" Width="44" SelectedIndex="0" ItemsSource="{Binding DriveLetters}"/>
                <Button x:Name="mountButton" Content="Mount" HorizontalAlignment="Left" Margin="49,0,0,0" VerticalAlignment="Top" Padding="5,1" Click="mountButton_Click" />
                <Button x:Name="unmountButton" Content="Unmount" HorizontalAlignment="Left" Margin="103,0,0,0" VerticalAlignment="Top" Padding="5,1" IsEnabled="False" Click="unmountButton_Click" />
                <CheckBox x:Name="automountCheckBox"  Content="Mount on login" IsEnabled="False" Margin="0,27,0,0" />
            </Grid>
        </GroupBox>

    </Grid>
</Window>
